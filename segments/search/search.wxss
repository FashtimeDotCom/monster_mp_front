.app .search{
  /* background:#efeff4; */
  height: 100rpx;
  line-height: 100rpx;
}
.app .search .search-input{
  position:relative;
  height: 60rpx;
  width:90%;
  padding-left:10px;
  margin: 0 5%;
  line-height:60rpx;
  background:#fff;
  border-radius:5px;
  color:#888;
  overflow:hidden;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: middle;
}
.app .search .search-input icon {
  height:14px;
  vertical-align:top;
  width:14px;
  margin-right:5px;
  margin-top:7px;
}
.app .search .search-input input{
  width:70%;
  display:inline-block;
  height:30px;
  line-height:30px;
}
.app .search .search-input .search-btn{
  position:absolute;
  top:0;
  right:0;
  width:20%;
  text-align:center;
  background-color:#dfdfdf;
  color:#999;
}
.app .search.another-style {
  padding: inherit !important;
  line-height: 50px;
}
.app .search.another-style .location {
  float: left;
  width: 25%;
  text-align: center;
}
.app .search.another-style .search-input{
  width: 70% !important;
  display: inline-block;
  vertical-align:middle;
  padding-left: 2% !important;
  margin: 0;
}
.fakeSearch {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 6;
}

.tcommunity-search {
  box-sizing: border-box;
  padding: 22rpx 10px;
  border-bottom: 1px solid #eee;
}
.tcommunity-search-input-label {
  display: inline-block;
  vertical-align: middle;
  width: 544rpx;
  height: 72rpx;
  font-size: 30rpx;
  color: #A6A6A6;
  border-radius: 38rpx;
  border: 1px solid #ccc;
  background: #fff;
}
.tcommunity-search-icon {
  display: inline-block;
  padding: 20rpx 22rpx;
  vertical-align: middle;
  font-size: 36rpx;
}
.tcommunity-search-input {
  display: inline-block;
  height: 100%;
  width: 465rpx;
  vertical-align: middle;
  border: none;
  outline: none;
  box-sizing: border-box;
}
.tcommunity-search-notify,
.tcommunity-search-usercenter {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  padding-left: 17rpx;
  width: 54rpx;
  text-align: center;
  font-size: 54rpx;
  color: #999;
}
.tcommunity-search-usercenter > image {
  display: block;
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
}
.tcommunity-search-notify-count {
  position: absolute;
  top: -15%;
  right: -5%;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  background: red;
  color: #fff;
  border-radius: 50%;
}